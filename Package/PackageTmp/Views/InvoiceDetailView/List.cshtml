@model List<Slbilling.Models.TenantIdInvoiceBreakDownModel>
@{
    ViewBag.Title = "Invoice Details";
    
}
<div class="InvoiceDetails">
    <h2>
        Invoice Details</h2>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td>
                    <strong>Region Name</strong>
                </td>
                <td>
                    <strong>Flavor Name</strong>
                </td>
                <td>
                    <strong>Tenant Id</strong>
                </td>
                <td>
                    <strong>VM Count</strong>
                </td>
                <td>
                    <strong>Monthly Cpu Used </strong>
                </td>
                <td>
                    <strong>Monthly Cost</strong>
                </td>
                 <td>
                    <strong>Time used</strong>
                </td>
                 <td>
                    <strong>CPU Price</strong>
                </td>
            </tr>
            @foreach (var item in Model)
            {
                if (item.VmCount > 0)
                {
                    <tr> <td class="text">@item.RegionName
                    </td> <td class="text">@item.FlavorName
                    </td> <td class="text">@item.TenantId
                    </td> <td class="text">@item.VmCount
                    </td> <td class="text">@item.SubCpuCount
                    </td> <td class="text">@item.SubCostTotal
                    </td> <td class="text">@item.TimeUsed
                    </td> <td class="text">@item.CpuCostPerHour             
                </td> </tr>    
                }   
            }
        </tbody>
    </table>
   
</div>

<div class="EmailInvoice">


</div>
